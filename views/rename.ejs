<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Visor de Excel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-blue-100 min-h-screen p-6 font-sans">

  <!-- Encabezado y acciones -->
  <div class="max-w-6xl mx-auto mb-6 flex flex-col sm:flex-row items-center justify-between gap-4">
    <h1 class="text-4xl font-bold text-blue-800 text-center sm:text-left">Visor de Excel</h1>
    <div class="flex flex-wrap gap-3 justify-center sm:justify-end">
      <button onclick="cerrarSesion()" class="px-5 py-2 bg-red-500 text-white rounded-lg shadow hover:bg-red-600 transition">
        Cerrar Sesión
      </button>
      <button onclick="exportarExcel()" class="px-5 py-2 bg-green-500 text-white rounded-lg shadow hover:bg-green-600 transition">
        Exportar a Excel
      </button>
      <button onclick="window.location.href='/login_admin'" class="px-5 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
         Editar Documento
      </button>
      <button onclick="window.location.href='/grafica'" class="px-5 py-2 bg-purple-600 text-white rounded-lg shadow hover:bg-purple-700 transition">
         Gráficas
      </button>
    </div>
  </div>

  <!-- Cargador de archivo -->
  <div class="max-w-4xl mx-auto bg-white p-6 rounded-2xl shadow-xl mb-6">
    <h2 class="text-2xl font-semibold text-gray-700 mb-4 text-center">Lista de Profesores</h2>

    <div class="flex justify-center mb-6">
      <input type="file" id="fileInput" accept=".xlsx, .xls"
             class="block w-full max-w-md text-sm text-gray-600 file:mr-4 file:py-2 file:px-4
             file:rounded-full file:border-0 file:text-sm file:font-semibold
             file:bg-blue-100 file:text-blue-800 hover:file:bg-blue-200 cursor-pointer"/>
    </div>

    <div id="excelData" class="overflow-x-auto rounded-lg border border-gray-200 bg-white"></div>
  </div>

  <!-- Script -->
  <script>
    // Mostrar datos guardados si existen
    window.addEventListener('DOMContentLoaded', () => {
      const saved = localStorage.getItem('tablaExcel');
      if (saved) {
        const data = JSON.parse(saved);
        displayTable(data);
      }
    });

    document.getElementById('fileInput').addEventListener('change', function (e) {
      const file = e.target.files[0];
      if (!file) return;

      const reader = new FileReader();

      reader.onload = function (e) {
        const data = new Uint8Array(e.target.result);
        const workbook = XLSX.read(data, { type: 'array' });

        const firstSheetName = workbook.SheetNames[0];
        const worksheet = workbook.Sheets[firstSheetName];

        const jsonData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });
        displayTable(jsonData);

        // Guardar en localStorage para persistencia
        localStorage.setItem('tablaExcel', JSON.stringify(jsonData));
      };

      reader.readAsArrayBuffer(file);
    });

    function displayTable(data) {
      if (!data || data.length === 0) return;

      let html = '<table class="min-w-full border-collapse table-auto text-sm">';
      html += '<thead><tr class="bg-blue-100 text-blue-800 font-semibold">';
      data[0].forEach(cell => {
        html += `<th class="py-3 px-4 border-b border-blue-200 text-left">${cell ?? ''}</th>`;
      });
      html += '</tr></thead><tbody>';

      data.slice(1).forEach(row => {
        html += '<tr class="hover:bg-gray-50">';
        row.forEach(cell => {
          html += `<td class="py-2 px-4 border-b border-gray-200">${cell ?? ''}</td>`;
        });
        html += '</tr>';
      });

      html += '</tbody></table>';
      document.getElementById('excelData').innerHTML = html;
    }

    function exportarExcel() {
      const savedData = localStorage.getItem('tablaExcel');
      if (!savedData) {
        alert("No hay datos para exportar.");
        return;
      }

      const data = JSON.parse(savedData);
      const ws = XLSX.utils.aoa_to_sheet(data);
      const wb = XLSX.utils.book_new();
      XLSX.utils.book_append_sheet(wb, ws, "Hoja1");

      XLSX.writeFile(wb, "datos_exportados.xlsx");
    }

    function cerrarSesion() {
      alert("Sesión cerrada.");
      window.location.href = '/'; // Redirigir al login
    }
  </script>
</body>
</html>
